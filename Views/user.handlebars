<div class="pagebody">
    <div class="pagecontent">
        <button id="logout">Logout -></button>
        {{#if user.conversations.length}}
        <div class="intro">You have New Messages, {{user.name}}!</div>
        {{#each user.conversations as |conversation|}}
        <div>
            <h3>Message from {{user.name}}:</h3>
            <h6 class="codertexttime">{{created_at}}</h6>
            <span class="codertext">{{text}}</span>
            {{!-- <div class="intro">
                <button id="reply">Reply -></button>
            </div> --}}
        </div>
        <h6 data-user="{{user.id}}" id="user_id"><button id="contact">Respond to {{user.name}}</button></h6>

            <section class="commentform">
                <div>
                    <div>
                        <textarea class="medtext" name="messagefield" id="messagefield"></textarea>
                    </div>
                    <div>
                        <label for="messagesubmit">Submit your helpful reply:</label>
                    </div>
                    <div class="submitbutton">
                        <button id="messagesubmit">Reply -></button>
                    </div>
                </div>
            </section>
        {{/each}}
        {{/if}}

        <h3>About {{user.name}}:</h3>

        {{#if user.image}}
            <img width="100px" src="{{user.image}}" />
        {{/if}}
        {{#if user.aboutme}}
            <h5>{{user.aboutme}}</h5>
        {{/if}}
        <a href="userprofile">Update User profile</a>

        {{#if user.ideas.length}}
        <h6>
            You have {{user.ideas.length}} previous ideas.
            <a href="/find/{{user.id}}">see previous posts-></a>
        </h6>
        {{/if}}
    </div>
</div>

<script src="/assets/js/logout.js"></script>
{{#if user.conversations.length}}
<script src="/assets/js/sendMessage.js"></script>
{{/if}}