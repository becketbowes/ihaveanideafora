<div class="pagebody">
    <div class="pagecontent" id="userinfo" data-user="{{user.name}}{{user.id}}">
        <button id="logout">Logout -></button>

        <h3>About {{user.name}}:</h3>

        {{!-- {{#if user.image}} --}}
            <img width="100px" src="{{user.image}}" alt="profile-picture"/>
            <button id="editimage">Edit Profile Image-></button>
        {{!-- {{else}} --}}
            <img id="uploadedimage" src=""></img> 

    <!-- cloudinary upload widget -->
    {{!-- <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script> --}}
            <button id="addimage">Upload Profile Image-></button>
        {{!-- {{/if}} --}}

        {{#if user.aboutme}}
            <h5>{{user.aboutme}}</h5>
        {{/if}}
        <button id="editaboutme">Write or Edit AboutMe -></button>

        {{#if user.ideas.length}}
        <h6>
            You have {{user.ideas.length}} previous ideas.
            <button id="previous">see previous posts-></button>
        </h6>

        <section id="previous-ideas" class="start-hidden">
        {{#each user.ideas as |idea|}}
        <a href="/idea/{{id}}">
            <div class="contained">
                <article class="idea">
                    <a id="idea-{{id}}" href="/idea/{{id}}" class="start-hidden"><h3>{{title}}</h3></a>
                    <h6>{{created_at}}</h6>
                    <h6>
                        {{#if idea_type}}{{idea_type}}, {{/if}}
                        {{#if coding_languages}}{{coding_languages}}, {{/if}}
                        {{#if keywords}}{{keywords}}, {{/if}}
                        {{#if offer_type}}{{offer_type}}{{#if offer_value}}: {{offer_value}}{{/if}}{{/if}}
                        </h6>
                    <span>
                        {{short_text}}
                    </span>
                    {{!-- <h6><button>-> love it!</button>{{upvote.number}} people loved this</h6> --}}
                    {{#if comments.length}}
                    <h6>{{comments.[0].user.name}} commented: {{comments.[0].text}} <a id="comment-{{id}}" class="to-comments no-style" href="/idea/{{id}}">see more comments -></a></h6>
                    {{else}}
                    <h6><a id="comment-{{id}}" class="to-comments start-hidden" href="/idea/{{id}}">add comments -></a></h6>
                    {{/if}}
                    <span>-----</span>
                </article>
            </div>    
            <button id="editidea">Edit Idea -></button>
        </a>
        {{/each}}
        </section>
        {{/if}}
    </div>
</div>

<script src="/assets/js/cloudinary.js"></script>  
<script src="/assets/js/logout.js"></script>
